{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block header %}{% endblock %}
{% block content1 %}{% endblock %}
{% block content2 %}{% endblock %}
{% block about %}{% endblock %}


{% block contact %}
<section class="page-section" id="contact">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Connectez-vous</h2>
            <h3 class="section-subheading text-muted"></h3>
        </div>

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <form id="contactForm" method="post">

                    <div class="row align-items-stretch mb-5 justify-content-md-center">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Adresse e-mail" required autofocus>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                    </div>

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}
                    <div class="text-center">
                        <div id="success"></div>
                        <button class="btn btn-primary btn-xl text-uppercase" id="sendMessageButton" type="submit">Se connecter</button>
                    </div>
                </form>
            </div>




</section>

{% endblock %}

